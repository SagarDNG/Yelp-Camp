    <h1>All CampGrounds</h1>
    <% for (let camp of camps) { %>
        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4">
                    <% if(camp.images.length) {%>
                        <img class="img-fluid" alt="" src="<%= camp.images[0].url %>">
                        <% } else {%>
                            <img class="img-fluid" alt=""
                                src="https://cdn2.howtostartanllc.com/images/business-ideas/business-idea-images/Campground.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location%>
                            </small>
                        </p>
                        <a class="btn btn-success flex-fill" href="/campgrounds/<%=camp._id%>">View <%=camp.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
